
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each track}}
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <figure>
           {{#if this.preview_url}}
                <audio controls src="{{this.preview_url}}"></audio>
              {{else}}
                <p>No preview available</p>
              {{/if}}
            </figure>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>